# 环境配置示例文件
# 复制此文件为 .env 并修改相应配置

# Flask环境
FLASK_ENV=development
# FLASK_ENV=production

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production

# 数据库配置
DATABASE_URL=sqlite:///notification_manager.db
# DATABASE_URL=postgresql://user:password@localhost/notification_manager
# DATABASE_URL=mysql://user:password@localhost/notification_manager

# API配置
API_TOKEN_EXPIRES_IN=31536000  # 1年 (秒)

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=notification_manager.log

# Redis配置（用于消息队列和缓存）
REDIS_URL=redis://localhost:6379/0

# Celery配置（消息队列）
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 监控配置（可选）
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# 限流配置
RATELIMIT_DEFAULT=100 per hour
